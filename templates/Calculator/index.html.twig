{% extends'base.html.twig' %}
{% block title %}Symfony-Calculator
{% endblock %}
{% block body %}


	<div class="container">
        <h2 class="text-center mb-4">Simple Symfony Calculator</h2>
        <div class="calculator-form">
            <form method="post" action="{{ path('calculator') }}" class="mb-4">
                <div class="form-group">
                    <input type="text" name="num1" class="form-control" placeholder="Enter first number" required>
                </div>
                <div class="form-group">
                    <select name="operator" class="form-control">
                        <option value="add">Addition (+)</option>
                        <option value="subtract">Subtraction (-)</option>
                        <option value="multiply">Multiplication (*)</option>
                        <option value="divide">Division (/)</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" name="num2" class="form-control" placeholder="Enter second number" required>
                </div>
                <button type="submit" name="submit" class="btn btn-primary btn-block">Calculate</button>
            </form>

            {% if result is defined %}
                <div class="alert alert-info" role="alert">
                    Result: {{ result }}
                </div>
            {% endif %}
        </div>
    </div>


{% endblock %}
